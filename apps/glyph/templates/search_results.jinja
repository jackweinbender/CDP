{% extends "base.jinja" %}
{% block title %}Search Results for {{ term }}{% endblock %}
{% block content %}
    <div class="container-fluid">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Sign</th>
                </tr>
            </thead>
            <tbody>
                {%- for item in items %}
                <tr>
                    <td><a href="{{ url_for(".cdp", sign_id=item.id) }}"><h4>CDP Records for sign "{{ item.sign_ref }}"</h4></a></td>
                </tr>
                {%- endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block sidebar %}
    <h3>Search results for "{{ term }}"</h3>
    <h4>{{ items|length }} {{ 'results' if items|length > 1 else 'result' }} found</h4>
{% endblock %}
