{% extends "base.jinja" %}
{% set active_page = "signs" %}
{% from "_utils.jinja" import render_pagination %}
{% block title %}CDP: All Signs{% endblock %}
{% block side_container %}{% endblock %}
{% block content %}
    <div class="container-fluid">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Sign</th>
                </tr>
            </thead>
            <tbody>
                {%- for item in page.items %}
                <tr>
                    <td><a href="{{ url_for(".cdp", sign_id=item.id) }}"><h4>CDP Records for sign "{{ item.sign_ref }}"</h4></a></td>
                </tr>
                {%- endfor %}
            </tbody>
        </table>
        {{ render_pagination(page, ".signs", request) }}
    </div>
{% endblock %}
