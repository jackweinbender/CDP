{% extends "base.jinja" %}
{% from "_utils.jinja" import render_pagination %}
{% block title %}Home{% endblock %}
{% block content %}
    <div class="container-fluid">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Museum Number</th>
                    <th>Medium</th>
                    <th>Period</th>
                </tr>
            </thead>
            <tbody>
                {%- for item in page.items %}
                <tr>
                    <td>{{ item.museum_number }}</td>
                    <td>{{ item.medium.name }}</td>
                    <td>{{ item.period.name }}</td>
                </tr>
                {%- endfor %}
            </tbody>
        </table>
        {{ render_pagination(page, "records") }}
    </div>
{% endblock %}